<div class="d-flex">
 <div class="m-3 col-6">
  <div class="container d-flex justify-content-start align-items-stretch m-0 col-12 flex-column">
   <div class="ml-3">
    <% if @versions.any? %>
     <h5>Versions</h5>
      <% @versions.each do |version| %>
        <p><%= version.name %></p>
        <%= link_to "View Version", project_version_path(version.project, version), class: "btn btn-flat" %>
      <% end %>
    <% end %>
   </div>
  </div>
</div>

