<div class="d-flex">
  <div class="m-3 col-6">
    <div class="container d-flex justify-content-start align-items-stretch m-0 col-12 flex-column">

      <div class="ml-3">
        <% if @customer_projects.any? %>
          <h1>Projects as a customer</h1>
          <%= link_to "Create project", new_project_path, class: "btn btn-flat" %>
          <% @customer_projects.each do |project| %>
            <div class="card-product mt-3">
              <%#= image_tag "#" %>
              <div class="card-product-infos">
                <p><%= project.name %></p>
                <p><%= project.brief %></p>
                <p><%= project.id %></p>
              </div>
            </div>
          <% end %>
        <% end %>

        <% if @artist_projects.any? %>
          <h1>Projects as an artist</h1>
          <% @artist_projects.each do |project| %>
            <div class="card-product mt-3">
              <%#= image_tag "#" %>
              <div class="card-product-infos">
                <p><%= project.name %></p>
                <p><%= project.brief %></p>
                <p><%= project.id %></p>
              </div>
            </div>
          <% end %>
        <% end %>

        <% if !@customer_projects.any? && !@artist_projects.any? %>
          <h3><i class="fas fa-palette"></i> Moodboards made effective.</h3>
          <p>Bring your ideas to life, start your first project.</p>
          <%= link_to "Get started", new_project_path(@project), class: "btn btn-flat" %>
        <% end %>

      </div>
    </div>
  </div>
</div>
