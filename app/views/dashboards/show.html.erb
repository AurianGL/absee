<div class="container-fluid">
  <div class="header">
    <h2>DASHBOARD</h2>
    <div class="deploy-plus">
      <%= link_to new_project_path(@project) do %>
      <button class="btn-circle-plus"><i class="fas fa-plus"></i></button>
      <% end %>
    </div>
  </div>

  <% if @customer_projects.any? %>
    <% @customer_projects.each do |project| %>
    <div class="card-project mt-3 mb-3">
      <div class="card-version-infos">
        <p><%= project.name %></p>
        <p><%= project.brief %></p>
          <div class="card-version-btn">
            <%= link_to project_path(project) do %>
              <button class="btn-circle-view"><i class="fas fa-eye"></i></button>
            <% end %>
          </div>
      </div>
    </div>
    <% end %>
  <% end %>

  <% if @artist_projects.any? %>
    <% @artist_projects.each do |project| %>
    <div class="card-project mb-3">
      <div class="card-version-infos">
        <p><%= project.name %></p>
        <p><%= project.brief %></p>
          <div class="card-version-btn">
            <%= link_to project_path(project) do %>
              <button class="btn-circle-view"><i class="fas fa-eye"></i></button>
            <% end %>
          </div>
      </div>
    </div>
    <% end %>
  <% end %>
  <% if !@customer_projects.any? && !@artist_projects.any? %>
     <p>Bring your ideas to life, start your first project.</p>
     <%= link_to "GET STARTED", new_project_path(@project), class: "a" %>
    <% end %>
</div>
