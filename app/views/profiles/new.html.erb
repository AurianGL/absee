<div class="container p-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>My <strong>A B See</strong> profile</h1>

      <%= simple_form_for @profile do |f| %>
        <%= f.input :username %>
        <%= f.input :customer, label: 'What do you do?', collection: Profile::CUSTOMERS %>
        <%= f.button :submit, class: 'btn' %>
      <% end %>
    </div>
  </div>
</div>
