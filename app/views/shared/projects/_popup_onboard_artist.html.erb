<!-- Button trigger modal -->
<% if !@project.artist %>
    <button type="button" class="btn btn-primary btn-circle" data-toggle="modal" data-target="#addArtist">
<i class="fas fa-palette"></i>
  </button>
<% end %>

<!-- Modal -->
<div class="modal fade" id="addArtist" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Onboard an Artist</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(url: project_path(@project), method: "patch", local: true) do %>
          <%= label_tag(:q, "Input artist email") %>
          <%= text_field_tag(:q) %>
          <%= submit_tag("Send") %>
        <%end%>
      </div>
    </div>
  </div>
</div>

