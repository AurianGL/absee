<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-circle" data-toggle="modal" data-target="#newWIP">
<i class="far fa-file-image"></i>
</button>

<!-- Modal -->
<div class="modal fade" id="newWIP" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Version</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [@project, @version] do |f| %>
          <%= f.input :name  %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
            <div class="modal-footer">
              <%= button_tag(type: 'submit', class: "btn btn-primary btn-circle-save") do %>
              <i class="fas fa-check"></i>
              <% end %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

