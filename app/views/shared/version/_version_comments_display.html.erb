<% @version.comments.each do |comment| %>
  <div class="draggable comment" style="top: <%= comment.y %>px; left: <%= comment.x %>px; z-index: <%= "#{comment.z}" %>">
    <% if comment.image.present? %>
      <%= cl_image_tag(comment.image_url, width: "300", height: "auto", alt: "erreur", draggable: false) %>
    <% end %>

    <% if comment.description.present? %>
      <div class="comment-text">
        <%= comment.description %>
      </div>
    <% end %>
  </div>
<% end %>
